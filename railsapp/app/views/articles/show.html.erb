<h1><%= @article.name %></h1>

<div class="container">
    <section class="article_info my-2">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="col-5">URL</th>
                    <th scope="col" class="col-3">カテゴリ</th>
                    <th scope="col" class="col-2">作成日</th>
                    <th scope="col" class="col-2">更新日</th>
                </tr>
            </thead>
            <tr>
                <td id="URL"><%= @article.url %></td>

                <td id="category"><% @article.categories.each do |category| %>
                                  <%= category.name %>
                                  <% end %>
                </td>
                <td id="created_at"><%= @article.created_at %></td>
                <td id="updated_at"><%= @article.updated_at %></td>
            </tr>
        </table>
    </section>

    <div class="row justify-content-center mt-4">
        <div class="col-2">
            <%= link_to "スクラップ一覧に戻る", articles_path, class: "btn btn-outline-secondary"%>
        </div>
        <div class="col-2">
            <%= link_to "このスクラップを編集", edit_article_path(@article), class: "btn btn-outline-secondary"%>
        </div>
        <div class="col-2">
            <%= button_to "このスクラップを削除", {controller: "articles", action: "destroy", id: @article.id}, method: :delete, class: "btn btn-outline-warning"%>
        </div>
    </div>
</div>